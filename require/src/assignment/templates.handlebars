<script id="assignment" type="text/x-handlebars-template">
    
    <div class="assignment-top"></div>

    <hr/>

    <div class="assignment-page"></div>
    
</script>


<script id="assignment_edit" type="text/x-handlebars-template">
    
    <input class="span12" type="text" data="title" placeholder="Assignment Title"/>
    <textarea class="span12" data="description" placeholder="Assignment Description">{{ description }}</textarea>
    <br/>Due date: <input class="span3 due-date">
    <br/><br/> 
    <!--<dd class="span1">Width:</dd><dt class="span4"><input type="text" data="width"/></dt>-->
    {{>item_edit_buttons}}
    
</script>


<script id="assignment_list" type="text/x-handlebars-template">
    
    <h2>Assignments</h2>
    <ul>
        {{#each models }}
            <li id="{{ id }}"><a class="open">{{ attributes/title }}</a>{{#if ../_editor }} (<a class="delete" href="#">delete</a>){{/if}}</li>
        {{/each}}
    </ul>

    {{#if _editor }}<button class="add-button btn success">Add assignment</button>{{/if}}
    
</script>


<script id="assignment_top" type="text/x-handlebars-template">
    
    <h2>{{ title }}</h2 >

    <div class="description">{{ description }}</div>

    {{#if due }}<br/><b>Due:</b> {{$date due }}<br/>{{/if }}

    {{#if _editor }}<button class="item-button edit-button btn success">Edit assignment details</button>{{/if}}
    
</script>
