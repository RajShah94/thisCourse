<script id="content" type="text/x-handlebars-template">

    <div class="content-inner">
         <h3 class='title'>{{ title }}</h3>
         
         <br/>
         <div class='sections row'></div>
         
             {{#if _editor }}
             <select class="content-button add-section-type">
                 <option value="freeform">Freeform</option>
                 <option value="gallery">Gallery</option>
                 <option value="">Generic</option>
             </select>
             <button class="content-button add-button btn success">Add section</button>
             {{/if}}
         <div class="clearfix"></div>
    </div> 
    
</script>


<script id="section" type="text/x-handlebars-template">

    <div class="section-inner">
        {{#if _editor }}<div class="section-button drag-button"></div>{{/if}}
        <h3 class='sectiontitle'>{{ title }}</h3>
        <div class='items row'></div>
        {{#if _editor }}
        <button class="section-button add-button btn success">Add item</button>
        <button class="section-button delete-button btn danger">X</button>
        {{/if}}
    </div>

</script>
